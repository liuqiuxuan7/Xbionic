<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="53.0dip"
            android:background="@drawable/topnav" >

            <Button
                android:id="@+id/btn_detailback"
                android:layout_width="53.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/backbtn" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="商品信息"
                android:textColor="#ffd7d7d7"
                android:textSize="22.0sp" />

            <Button
                android:id="@+id/btn_detailsearch"
                android:layout_width="53.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/ll_scroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Gallery
                    android:id="@+id/gl_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="180.0dip"
                    android:background="#ff000000" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:background="#ffe04b11" >

                    <TextView
                        android:id="@+id/tv_details"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="7.0dip"
                        android:gravity="center_vertical"
                        android:text="坑爹产品，不解释"
                        android:textColor="#ffffffff" />

                    <Button
                        android:id="@+id/but_sinashare"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/but_sina_share" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180.0dip"
                    android:background="#ff343435"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip" >

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20.0dip"
                            android:layout_marginTop="8.0dip"
                            android:text="售价："
                            android:textColor="#ffffffff" />

                        <TextView
                            android:id="@+id/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/text_name"
                            android:layout_alignBottom="@+id/text_name"
                            android:layout_marginLeft="10.0dip"
                            android:layout_toRightOf="@+id/text_name"
                            android:text="￥1000"
                            android:textColor="#ffa90a0b"
                            android:textSize="17.0dip" />

                        <TextView
                            android:id="@+id/text_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/text_price"
                            android:layout_alignParentBottom="true"
                            android:text="好好奋斗吧！骚年！"
                            android:textColor="#ffcfcfcf" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20.0dip"
                            android:layout_marginTop="10.0dip"
                            android:text="颜色："
                            android:textColor="#ffffffff" />

                        <LinearLayout
                            android:id="@+id/rg_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7.0dip"
                            android:layout_marginTop="10.0dip"
                            android:orientation="horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20.0dip"
                            android:layout_marginTop="10.0dip"
                            android:text="尺码："
                            android:textColor="#ffffffff" />

                        <LinearLayout
                            android:id="@+id/rg_size"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="10.0dip"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginTop="10.0dip"
                            android:orientation="horizontal" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent" >

                            <Button
                                android:id="@+id/btn_collect_purse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16.0dip"
                                android:background="@drawable/but_shop"
                                android:text="添加收藏"
                                android:textColor="#ffffffff" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20.0dip"
                            android:layout_marginTop="10.0dip"
                            android:text="数量："
                            android:textColor="#ffffffff" />

                        <EditText
                            android:id="@+id/tv_forcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="10.0dip"
                            android:background="@drawable/stocknumber"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="#ffe04b11" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="8.0dip"
                            android:text="(库存3件)"
                            android:textColor="#ffffffff"
                            android:textSize="15.0dip" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent" >

                            <Button
                                android:id="@+id/btn_shopping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16.0dip"
                                android:layout_marginTop="10.0dip"
                                android:background="@drawable/but_shop"
                                android:text="加入购物车"
                                android:textColor="#ffffffff" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:background="#ffe04b11" >

                    <TextView
                        android:id="@+id/tv_Science"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="7.0dip"
                        android:gravity="center_vertical"
                        android:text="产品尺码"
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ff000000"
                    android:orientation="vertical" >

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="35.0dip"
                                android:background="#ff000000"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="ID"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="81.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="StandardId"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="Size"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P1"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P2"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P3"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P4"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P5"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P6"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P7"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P8"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P9"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P10"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="67.0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/size_shape"
                                    android:gravity="center"
                                    android:text="P11"
                                    android:textColor="#ffffffff" />
                            </LinearLayout>

                            <ListView
                                android:id="@+id/lv_size"
                                android:layout_width="fill_parent"
                                android:layout_height="200.0dip" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:background="#ffe04b11" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="7.0dip"
                        android:gravity="center_vertical"
                        android:text="科技点"
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <ListView
                    android:id="@+id/lv_technology"
                    android:layout_width="fill_parent"
                    android:layout_height="200.0dip" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="280.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:background="@drawable/productbg" />

</android.support.v4.widget.DrawerLayout>