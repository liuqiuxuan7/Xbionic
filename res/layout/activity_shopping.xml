<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="53.0dip"
                    android:background="@drawable/topnav" >

                    <Button
                        android:id="@+id/btn_shop_back"
                        android:layout_width="53.0dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/but_back"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="我的购物车"
                        android:textColor="#ffd7d7d7"
                        android:textSize="22.0dip" />

                    <Button
                        android:id="@+id/btn_editor"
                        android:layout_width="53.0dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/but_pen" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72.0dip"
                    android:layout_marginTop="53.0dip"
                    android:background="@drawable/tmall_bg_furley"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@id/ed_search"
                        android:layout_width="fill_parent"
                        android:layout_height="32.0dip"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginTop="10.0dip"
                        android:background="@drawable/edit_bg"
                        android:hint="选填,查找达人手机号码或EMAIL获得8%的抵用券"
                        android:textSize="13.0dip" />

                    <TextView
                        android:id="@id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/ed_search"
                        android:layout_below="@id/ed_search"
                        android:layout_marginTop="6.0dip"
                        android:text="@string/text_for_shop"
                        android:textColor="#fff65e13" />

                    <ImageView
                        android:id="@id/shop_for_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginTop="6.0dip"
                        android:background="@drawable/btn_search" />
                </RelativeLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/allbackground" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/lv_shop"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="6.0" />

                    <TextView
                        android:id="@+id/tv_infobuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="100dp"
                        android:paddingTop="100dp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="56.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/topnav"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_count1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6.0dip"
                            android:layout_marginTop="6.0dip"
                            android:text="邮寄费：￥0.0"
                            android:textColor="#ffffffff" />

                        <Button
                            android:id="@+id/but_acount"
                            android:layout_width="77.0dip"
                            android:layout_height="35.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="9.0dip"
                            android:layout_marginTop="6.0dip"
                            android:background="@drawable/but_account"
                            android:text="结算"
                            android:textColor="#ffffffff" />

                        <TextView
                            android:id="@+id/tv_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/tv_count1"
                            android:layout_alignBottom="@id/tv_count1"
                            android:layout_marginLeft="8.0dip"
                            android:layout_toRightOf="@id/tv_count1"
                            android:text="商品金额总计："
                            android:textColor="#ffffffff" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/tv_count2"
                            android:layout_alignBottom="@id/tv_count2"
                            android:layout_toRightOf="@id/tv_count2"
                            android:text="￥0.0"
                            android:textColor="#ffd9450e" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>