<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <RelativeLayout 
    android:id="@+id/layout1"
	android:background="@drawable/tmall_bg_furley" 
	android:layout_width="match_parent" 
	android:layout_height="140.0dip"
	android:layout_alignParentLeft="true" 
	android:layout_alignParentTop="true">
        <ImageView 
		android:id="@+id/imageView1" 
		android:background="@drawable/head" 
		android:layout_width="90.0dip" 
		android:layout_height="90.0dip"
		android:layout_marginLeft="15.0dip" 
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" />
        <TextView 
		android:textSize="13.0dip" 
		android:textColor="#ffffffff"
		android:id="@id/textView1" 
		android:layout_width="60.0dip" 
		android:layout_height="20.0dip" 
		android:layout_marginLeft="17.0dip" 
		android:text="部落积分:" 
		android:layout_toRightOf="@+id/imageView1" 
		android:layout_alignTop="@+id/imageView1" />
        <TextView 
		android:textSize="13.0dip" 
		android:textColor="#ffdd5e06"
		android:id="@+id/textView2" 
		android:layout_width="25.0dip"
		android:layout_height="20.0dip"
		android:text="200" 
		android:layout_toRightOf="@id/textView1" 
		android:layout_alignBaseline="@id/textView1"
		android:layout_alignBottom="@id/textView1" />
        <TextView 
		android:textSize="13.0dip" 
		android:textColor="#ffdd5e06" 
		android:id="@+id/textView4" 
		android:layout_width="29.0dip" 
		android:layout_height="20.0dip"
		android:text="0.00"
		android:layout_toRightOf="@+id/textView3"
		android:layout_alignBaseline="@+id/textView3"
		android:layout_alignBottom="@+id/textView3" />
        <TextView 
		android:textSize="13.0dip" 
		android:textColor="#ffffffff" 
		android:id="@+id/textView5" 
		android:layout_width="25.0dip" 
		android:layout_height="20.0dip" 
		android:text="元" 
		android:layout_toRightOf="@+id/textView4" 
		android:layout_alignBaseline="@+id/textView4" 
		android:layout_alignBottom="@+id/textView4" />
        <TextView 
		android:textSize="13.0dip" 
		android:textColor="#ffffffff"
		android:id="@+id/textView3"
		android:layout_width="90.0dip"
		android:layout_height="20.0dip" 
		android:layout_marginTop="6.0dip"
		android:text="可兑换抵用券:" 
		android:layout_below="@id/textView1" 
		android:layout_alignLeft="@id/textView1" />
        <ProgressBar 
		android:id="@+id/prog_home" 
		android:background="@null"
		android:layout_width="150.0dip" 
		android:layout_height="10.0dip"
		android:max="100"
		android:progress="25"
		android:layout_alignLeft="@+id/textView6" 
		android:layout_alignBottom="@+id/imageView1" 
		style="?android:attr/progressBarStyleHorizontal" />
        <TextView 
		android:textSize="13.0sp" 
		android:textColor="#ffffffff" 
		android:id="@+id/textView6"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="6.0dip" 
		android:text="达人升级进度表:" 
		android:layout_below="@+id/textView4" 
		android:layout_alignLeft="@+id/textView3" />
        <TextView 
		android:textSize="13.0dip" 
		android:textColor="#ffffffff"
		android:id="@+id/textView8" 
		android:layout_width="25.0dip" 
		android:layout_height="20.0dip"
		android:layout_marginLeft="6.0dip" 
		android:text="25%" 
		android:layout_toRightOf="@+id/textView6"
		android:layout_alignBaseline="@+id/textView6" 
		android:layout_alignBottom="@+id/textView6" />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="16dp"/>
     
	 <ListView
	    android:layout_below="@+id/layout1"
        android:id="@+id/left_drawer"
        android:layout_width="400.0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="@drawable/allbackground" />
    
     <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_below="@+id/left_drawer"/>
    

</RelativeLayout>
