<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:gravity="center" 
    android:orientation="vertical"
     android:background="@drawable/bg"
      android:layout_width="fill_parent" 
      android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
         android:gravity="center" 
         android:orientation="vertical" 
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content" 
         android:layout_weight="1.0">
        <ImageView 
            android:id="@+id/img_logo_load" 
            android:background="@drawable/logo" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="70.0dip" 
            android:layout_marginTop="25.0dip" 
            android:layout_marginRight="70.0dip" 
            android:layout_weight="2.0" />
        <Button 
            android:textSize="18.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/btn_sina" 
            android:background="@drawable/but_bg" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="45.0dip" 
            android:layout_marginTop="30.0dip" 
            android:layout_marginRight="45.0dip" 
            android:text="新浪用户登录" 
            android:layout_weight="1.0" />
        <Button 
            android:textSize="18.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/btn_QQ"
            android:background="@drawable/but_bg" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="45.0dip" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginRight="45.0dip" 
            android:text="腾讯账号登录" 
            android:layout_weight="1.0" />
        <Button 
            android:textSize="18.0sp"
             android:textColor="#ffffffff" 
             android:id="@+id/btn_buluo" 
             android:background="@drawable/but_bg" 
             android:layout_width="fill_parent" 
             android:layout_height="wrap_content" 
             android:layout_marginLeft="45.0dip" 
             android:layout_marginTop="10.0dip" 
             android:layout_marginRight="45.0dip" 
             android:text="部落用户登录" 
             android:layout_weight="1.0" />
        <Button 
            android:background="#ff000000" 
            android:layout_width="fill_parent" 
            android:layout_height="0.100000024dip" 
            android:layout_marginTop="10.0dip" />
        <Button 
            android:textSize="18.0sp" 
            android:textColor="#ffffffff" 
            android:id="@+id/btn_register" 
            android:background="@drawable/but_bg" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="45.0dip" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginRight="45.0dip" 
            android:text="新用户注册" 
            android:layout_weight="1.0" />
        <Button 
            android:background="#ff000000" 
            android:layout_width="fill_parent" 
            android:layout_height="0.100000024dip" 
            android:layout_marginTop="10.0dip" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0">
        <RelativeLayout 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent">
            <ImageButton 
                android:id="@+id/Ib_help1" 
                android:background="@drawable/img_but_help" 
                android:layout_width="40.0dip" 
                android:layout_height="30.0dip" 
                android:layout_marginLeft="10.0dip" 
                android:layout_alignParentLeft="true" 
                android:layout_centerVertical="true" />
            <ImageButton
                android:id="@+id/Ib_server1" 
                android:background="@drawable/img_but_serve" android:layout_width="60.0dip" android:layout_height="30.0dip" android:layout_alignTop="@+id/Ib_help1" android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
