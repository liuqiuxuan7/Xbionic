<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
android:background="@drawable/allbackground" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout 
       android:id="@+id/relativeLayout1"
             android:background="@drawable/topnav" 
			 android:layout_width="fill_parent" 
			 android:layout_height="53.0dip">
			  <TextView 
				android:textSize="22.0sp"
				android:textColor="#ffd7d7d7"
				android:gravity="center" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				android:text="账户设置" />
             <Button 
      			 android:id="@+id/btn_listButton"
      			 android:layout_width="wrap_content"
      			 android:layout_height="wrap_content"
       			 android:background="@drawable/backbtn"/>
      </RelativeLayout>
    <RelativeLayout 
	android:id="@+id/relativeLayout2"
	android:background="@drawable/expert_edit1" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:layout_marginLeft="8.0dip" 
	android:layout_marginTop="22.0dip" 
	android:layout_marginRight="8.0dip"
	android:layout_below="@+id/relativeLayout1" 
	android:layout_alignParentLeft="true">
        <TextView 
		android:textSize="17.0dip" 
		android:id="@+id/textView2" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginLeft="16.0dip" 
		android:layout_marginTop="10.0dip" 
		android:text="用户名:" />
        <TextView 
		android:textSize="17.0dip" 
		android:id="@+id/textView1" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16.0dip" 
		android:text="Email:" 
		android:layout_alignParentLeft="true" 
		android:layout_centerVertical="true" />
        <TextView 
		android:textSize="17.0dip" 
		android:id="@+id/textView3" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginTop="120.0dip" 
		android:text="收件地址:"
		android:layout_below="@+id/textView1"
		android:layout_alignLeft="@+id/textView1" />
        <EditText 
		android:background="@null" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:ems="10" 
		android:layout_toRightOf="@+id/textView2"
		android:layout_alignBaseline="@+id/textView2"
		android:layout_alignBottom="@+id/textView2" 
		android:inputType="textPersonName">
            <requestFocus />
        </EditText>
        <EditText 
		android:background="@null" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		android:layout_toRightOf="@+id/textView2" 
		android:layout_alignBaseline="@+id/textView2" 
		android:layout_alignBottom="@id/textView2" 
		android:inputType="textPersonName">
            <requestFocus />
        </EditText>
        <EditText 
		android:background="@null" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:ems="10" 
		android:layout_toRightOf="@id/textView2" 
		android:layout_centerVertical="true"
		android:inputType="textPersonName" />
        <EditText 
		android:background="@null"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:ems="10" 
		android:layout_toRightOf="@id/textView3" 
		android:layout_alignBottom="@id/textView3" 
		android:layout_alignParentRight="true"
		android:inputType="textPersonName" />
    </RelativeLayout>
    <RelativeLayout 
	android:id="@+id/relativeLayout3" 
	android:background="@drawable/expert_edit3" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_marginTop="18.0dip" 
	android:layout_below="@id/relativeLayout2" 
	android:layout_alignLeft="@id/relativeLayout2" 
	android:layout_alignRight="@id/relativeLayout2">
        <TextView 
		android:textSize="17.0dip"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="16.0dip" 
		android:layout_marginTop="10.0dip"
		android:text="登录密码" />
    </RelativeLayout>
    <Button
	android:textSize="17.0dip"
	android:textColor="#ffffffff"
	android:id="@+id/button1"
	android:background="@drawable/go_tribe_1"
	android:layout_width="fill_parent" 
	android:layout_height="39.0dip" 
	android:layout_marginTop="25.0dip" 
	android:text="保存修改" 
	android:layout_below="@+id/relativeLayout3" 
	android:layout_alignLeft="@+id/relativeLayout3"
	android:layout_alignRight="@+id/relativeLayout3" />
    <Button 
	android:textSize="17.0dip" 
	android:textColor="#ffffffff" 
	android:id="@+id/button2"
	android:background="@drawable/gray_btn_normal"
	android:layout_width="fill_parent" 
	android:layout_height="39.0dip" 
	android:layout_marginTop="35.0dip" 
	android:text="注销登录"
	android:layout_below="@+id/button1" 
	android:layout_alignLeft="@+id/button1" 
	android:layout_alignRight="@+id/button1" />
</RelativeLayout>
