<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMainActivity"
    android:background="@drawable/allbackground" >
     <TextView 
	android:textSize="18.0sp" 
	android:textColor="#ffffffff" 
	android:gravity="center" 
	android:id="@+id/textView1" 
	android:background="@drawable/topnav" 
	android:layout_width="fill_parent" 
	android:layout_height="50.0dip" 
	android:text="注册" />
    <Button 
	android:id="@+id/btn_register_back1" 
	android:background="@drawable/backbtn" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/but_register_back"
        ></LinearLayout>
    <Button
        android:id="@+id/sina_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView1"
        android:background="@drawable/sina_register" 
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/qq_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qq_register" 
        android:layout_marginTop="16dp"
        android:layout_below="@+id/sina_register"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/telephone_register1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/telephone_register"
        android:layout_marginTop="16dp" 
        android:layout_below="@+id/qq_register"
         android:layout_centerHorizontal="true"/>
</RelativeLayout>
