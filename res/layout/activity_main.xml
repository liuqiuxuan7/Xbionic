<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="@drawable/img_2">
   <FrameLayout 
      android:id="@+id/main_content" 
	  android:layout_width="match_parent"
	  android:layout_height="match_parent" >
	  <LinearLayout    
	     android:layout_width="match_parent"
         android:layout_height="match_parent" 
         android:orientation="vertical" >
         <RelativeLayout 
             android:background="@drawable/topnav" 
			 android:layout_width="fill_parent" 
			 android:layout_height="53.0dip">
			  <TextView 
				android:textSize="22.0sp"
				android:textColor="#ffd7d7d7"
				android:gravity="center" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				android:text="部落平方" />
             <Button 
      			 android:id="@+id/btn_listButton"
      			 android:layout_width="wrap_content"
      			 android:layout_height="wrap_content"
       			 android:background="@drawable/listbutton"/>
    		<Button 
     		  	 android:id="@+id/btn_search"
      		  	 android:layout_width="wrap_content"
      		 	 android:layout_height="wrap_content"
      		  	 android:background="@drawable/search"
      			 android:layout_alignParentRight="true"/>
            </RelativeLayout>
          <FrameLayout
              android:id="@+id/main_content" 
			  android:layout_width="match_parent" 
			  android:layout_height="match_parent" >
  			   <LinearLayout 
      			  android:id="@+id/linear1"
      			  android:layout_width="match_parent"
      			  android:layout_height="match_parent"
       			  android:orientation="vertical">
       			     <LinearLayout 
					android:layout_width="fill_parent" 
					android:layout_height="200.0dip" />
                    <LinearLayout
					android:orientation="horizontal" 
					android:layout_width="fill_parent" 
					android:layout_height="100.0dip">
        				<Button 
          				    android:id="@+id/btn_purse"
          					android:layout_width="0dp"
          					android:layout_height="wrap_content"
          					android:text="产品购买"
          					android:layout_marginLeft="10.0dip" 
						    android:layout_marginTop="10.0dip" 
						    android:layout_marginRight="5.0dip" 
         					android:background="@drawable/share_vp_back"
         					android:textColor="@color/white"
         					android:layout_weight="1.0"
         					/>
                 		 <Button 
           					android:id="@+id/btn_story"
           					android:layout_width="0dp"
           					android:layout_height="wrap_content"
          					android:text="达人故事"
          					android:layout_marginLeft="10.0dip" 
						    android:layout_marginTop="10.0dip" 
						    android:layout_marginRight="5.0dip" 
           					android:background="@drawable/btn_back_nor"
           					android:textColor="@color/black" 
           					android:layout_weight="1.0"/>
                         </LinearLayout>
                     <LinearLayout 
                        android:orientation="horizontal" 
       					android:layout_width="match_parent"
        				android:layout_height="100dip">     
       					  <Button 
        				   		android:id="@+id/btn_activity"
           						android:layout_width="0dp"
                                android:layout_height="wrap_content"
           						android:text="X的活动"
           						android:layout_marginLeft="5.0dip" 
						        android:layout_marginTop="10.0dip" 
								android:layout_marginRight="10.0dip"
           						android:background="@drawable/btn_back_nor"
           						android:textColor="@color/black"
           						android:layout_weight="1"/>
         
                  		 <Button 
           						android:id="@+id/btn_introducte"
           						android:layout_width="0dp"
          			 			android:layout_height="wrap_content"
           						android:text="X的介绍"
           						android:layout_marginLeft="5.0dip" 
								android:layout_marginTop="10.0dip" 
								android:layout_marginRight="10.0dip"
           						android:background="@drawable/share_vp_back"
          				 		android:textColor="@color/white" 
           						android:layout_weight="1"/>
                   </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    

</RelativeLayout>
